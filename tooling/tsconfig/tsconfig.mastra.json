{
	"$schema": "https://json.schemastore.org/tsconfig",
	// Extends Node.js configuration with Mastra-specific optimizations
	"extends": "./tsconfig.nodejs.json",
	"compilerOptions": {
		/* Mastra Environment: Configuration optimized for Mastra applications */
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"noEmit": true,
		"outDir": "dist"
	}
}
