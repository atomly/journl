{
	"extends": "@acme/tsconfig/tsconfig.nodejs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"allowImportingTsExtensions": true,
		"incremental": true,
		"noEmit": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
