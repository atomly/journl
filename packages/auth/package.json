{
  "name": "@acme/auth",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./env": {
      "types": "./src/env.ts",
      "default": "./dist/env.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check": "biome check",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm build --watch",
    "generate": "dotenv -e ../../.env -- pnpx @better-auth/cli generate --output ../db/src/auth-schema.ts --config ../../apps/web/src/auth/server.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "peerDependencies": {
    "next": "~15.3.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "stripe": "~18.5.0"
  },
  "dependencies": {
    "@acme/db": "workspace:*",
    "@better-auth/stripe": "1.3.9",
    "@t3-oss/env-nextjs": "~0.13.6",
    "better-auth": "1.3.9",
    "zod": "~3.25.71"
  },
  "devDependencies": {
    "@acme/tsconfig": "workspace:*",
    "@types/react": "~19.1.8"
  }
}
