{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedKeys": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*",
			"!**/dist",
			"!**/node_modules",
			"!**/.next",
			"!**/.turbo"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"nursery": {
				"useSortedClasses": "on"
			},
			"recommended": true,
			"style": {
				"noInferrableTypes": "error",
				"noParameterAssign": "error",
				"noProcessEnv": "error",
				"noUnusedTemplateLiteral": "error",
				"useAsConstAssertion": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error"
			},
			"suspicious": {
				"noConsole": {
					"level": "warn",
					"options": {
						"allow": [
							"debug",
							"info",
							"warn",
							"error"
						]
					}
				}
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"**/env.ts",
				"**/drizzle.config.ts"
			],
			"linter": {
				"rules": {
					"style": {
						"noProcessEnv": "off"
					}
				}
			}
		},
		{
			"assist": {
				"actions": {
					"source": {
						"useSortedKeys": "off"
					}
				}
			},
			"includes": [
				"**/package.json",
				"**/tsconfig*.json",
				"**/*schema.ts"
			]
		}
	],
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": false
	}
}