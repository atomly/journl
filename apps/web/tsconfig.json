{
  "extends": "@acme/tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "incremental": false,
    /* Enables helpful hints for the Workflow SDK */
    "plugins": [
      {
        "name": "workflow"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
